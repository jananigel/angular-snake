/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "ES2022",
		"module": "ES2020",
		"lib": ["ES2021", "dom"],
		"useDefineForClassFields": false,
		"paths": {
			"@enums": ["src/app/core/enums/index.ts"],
			"@widgets": ["src/app/shared/widgets/index.ts"],
			"@form-validators": ["src/app/core/form-validators/index.ts"],
			"@constants": ["src/app/core/constants/index.ts"],
			"@abstracts": ["src/app/core/abstracts/index.ts"],
			"@injection-token": ["src/app/core/injection-token/index.ts"],
			"@interfaces": ["src/app/core/interfaces/index.ts"],
			"@apis": ["src/app/core/services/apis/index.ts"],
			"@core-services": ["src/app/core/services/index.ts"],
			"@shared-services": ["src/app/shared/services/index.ts"],
			"@interceptors": ["src/app/core/interceptors/index.ts"],
			"@layouts": ["src/app/shared/components/layouts/index.ts"],
			"@guards": ["src/app/core/guards/index.ts"],
			"@shared-components": ["src/app/shared/components/index.ts"],
			"@initializer": ["src/app/core/services/initializer/index.ts"],
			"@animations": ["src/app/shared/animations/index.ts"],
			"@cdk-overlay": ["src/app/shared/services/cdk-overlay/index.ts"],
			"@shared-buttons": ["src/app/shared/components/buttons/index.ts"],
			"@dropdowns": ["src/app/shared/components/dropdowns/index.ts"],
			"@progress-bars": ["src/app/shared/components/progresses/index.ts"],
			"@directives": ["src/app/shared/directives/index.ts"],
			"@environment": ["src/environments/environment.ts"],
			"@resolvers": ["src/app/core/resolvers/index.ts"],
			"@utils": ["src/app/core/utils/index.ts"],
			"@modals": ["src/app/shared/components/modals/index.ts"],
			"@type-guards": ["src/app/core/type-guards/index.ts"],
			"@pipes": ["src/app/shared/pipes/index.ts"],
			"@decorators": ["src/app/core/decorators/index.ts"],
			"@types": ["src/app/core/types/index.ts"]
		}
	},
	"angularCompilerOptions": {
		"enableI18nLegacyMessageIdFormat": false,
		"strictInjectionParameters": true,
		"strictInputAccessModifiers": true,
		"strictTemplates": true
	}
}
